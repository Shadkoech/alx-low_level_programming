# inclusion of m.h as a prerequisite in all is key since it is the header file for the project.
# This means that and any changes to this header file will trigger a 
# rebuild of the $(NAME) target to ensure it is consistent with the latest header information.

CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic


.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)


clean: 
	$(RM) *~ $(NAME)


oclean:
	$(RM) $(OBJ)


fclean: clean oclean


re: fcleain all
